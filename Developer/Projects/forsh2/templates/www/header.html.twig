<header class="main-header">
    <nav class="navbar navbar-expand-lg fixed-top vw-100" id="mainNav">
        <div class="container px-4 px-lg-5">
            <!-- Brand -->
            <a class="navbar-brand link-primary" href="/" title="{{ title }}">
                <svg fill="currentColor">
                    <use xlink:href="{{ asset('images/forschungsmittel_com_logo_serif.svg') }}#logo"></use>
                </svg>
            </a>

            <!-- Menu Toggler -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon">
                    <i class="bi bi-list"></i>
                </span>
            </button>

            <!-- Main Menu -->
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="menu-main navbar-nav me-auto mb-2 mb-lg-0">
                    {% for item in menu.main %}
                        {% if item.children is defined %}
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    {{ item.name }}
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    {% for childItem in item.children %}
                                    <li>
                                        <a
                                            class="dropdown-item {# {{ if $active }} active{{ end }} #}"
                                            data-track-click-event-Label="{{ item.name }} / {{ childItem.name }}"
                                            data-track-click-event-category="header-navi"
                                            href="{{ item.url }}"
                                            {#
                                                {{ if $active }}aria-current="true" {{ end }}
                                            #}
                                        >
                                            {{ childItem.name }}
                                        </a>
                                    </li>
                                    {% endfor %}
                                </ul>
                            </li>
                        {% else %}
                            <li class="nav-item">
                                <a
                                    class="nav-link  {# {{ if $active }} active{{ end }} #}"
                                    aria-current="page"
                                    data-track-click-event-Label="{{ item.name }}"
                                    data-track-click-event-category="header-navi"
                                    href="{{ item.url }}"
                                    {#
                                        {{ with .Title }} title='{{ . }}' aria-label='{{ . }}'{{ end }}
                                    #}
                                >
                                    {{ item.name }}
                                </a>
                            </li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>
        </div>
    </nav>
</header>
