                            <a
                                class="text-decoration-none text-body"
                                data-track-click-event-Label="{{ item.name }}"
                                data-track-click-event-category="footer-navi"
                                href="{{ item.url }}"
                                {# {{ with .Title }}title='{{ . }}' aria-label='{{ . }}'{{ end }}  #}
                            >
                                {{ item.name }}
                            </a>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>

